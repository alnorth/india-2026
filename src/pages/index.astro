---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getAllDays } from '@/lib/days';
import { format } from 'date-fns';

const days = getAllDays();
---

<BaseLayout>
  <div>
    <div class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Journey Overview</h2>
      <p class="text-gray-700 dark:text-gray-300">
        Follow along as I cycle from coast to coast across southern India.
        Each day includes the planned route, ride details, and stories from the road.
      </p>
    </div>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {days.map((day) => (
        <a
          href={`/day/${day.slug}/`}
          class="block p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow"
        >
          <div class="flex justify-between items-start mb-2">
            <h3 class="text-xl font-semibold">{day.title}</h3>
            <span class={`px-2 py-1 text-xs rounded ${
              day.status === 'completed' ? 'bg-green-100 text-green-800' :
              day.status === 'in-progress' ? 'bg-yellow-100 text-yellow-800' :
              'bg-gray-100 text-gray-800'
            }`}>
              {day.status}
            </span>
          </div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
            {format(new Date(day.date), 'EEEE, MMMM d, yyyy')}
          </p>
          {day.distance && (
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Distance: {day.distance} km
            </p>
          )}
          {day.location && (
            <p class="text-sm text-gray-600 dark:text-gray-400">
              {day.location}
            </p>
          )}
        </a>
      ))}
    </div>

    {days.length === 0 && (
      <div class="text-center py-12 text-gray-500">
        <p>No days added yet. Check back soon!</p>
      </div>
    )}
  </div>
</BaseLayout>
