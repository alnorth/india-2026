---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getAllDays } from '@/lib/days';
import { format } from 'date-fns';
import RouteMapThumbnail from '@/components/RouteMapThumbnail';
import { kmToMiles, metersToFeet } from '@/lib/unitConversions';

const days = getAllDays();
---

<BaseLayout>
  <div>
    <div class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Journey Overview</h2>
      <p class="text-sand-700 dark:text-sand-300">
        Follow along as I cycle from coast to coast across southern India.
        Each day includes the planned route, ride details, and stories from the road.
      </p>
    </div>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {days.map((day) => (
        <a
          href={`/day/${day.slug}/`}
          class="block bg-sand-50 dark:bg-earth-800 rounded-lg shadow-md hover:shadow-lg transition-shadow overflow-hidden"
        >
          {/* Route Thumbnail */}
          {day.gpxPath && (
            <div class="h-48 w-full">
              <RouteMapThumbnail client:load gpxPath={day.gpxPath} />
            </div>
          )}

          <div class="p-6">
            <div class="flex justify-between items-start mb-2">
              <h3 class="text-xl font-semibold">{day.title}</h3>
              <span class={`px-2 py-1 text-xs rounded flex-shrink-0 ml-2 ${
                day.status === 'completed' ? 'bg-forest-100 text-forest-800' :
                day.status === 'in-progress' ? 'bg-saffron-100 text-saffron-800' :
                'bg-sand-200 text-sand-800'
              }`}>
                {day.status}
              </span>
            </div>

            <p class="text-sm text-sand-600 dark:text-sand-400 mb-3">
              {format(new Date(day.date), 'EEEE, MMMM d, yyyy')}
            </p>

            {day.location && (
              <p class="text-sm text-sand-600 dark:text-sand-400 mb-3">
                {day.location}
              </p>
            )}

            {/* Stats from GPX */}
            {day.gpxStats && (
              <div class="grid grid-cols-3 gap-2 text-sm border-t border-sand-300 pt-3 dark:border-earth-700">
                <div>
                  <div class="text-sand-500 dark:text-sand-400 text-xs">Distance</div>
                  <div class="font-semibold text-earth-900 dark:text-sand-100">
                    {day.gpxStats.distance} km
                  </div>
                  <div class="text-xs text-sand-500 dark:text-sand-400">
                    {kmToMiles(day.gpxStats.distance)} mi
                  </div>
                </div>
                <div>
                  <div class="text-sand-500 dark:text-sand-400 text-xs">Elevation ↑</div>
                  <div class="font-semibold text-earth-900 dark:text-sand-100">
                    {day.gpxStats.elevationGain} m
                  </div>
                  <div class="text-xs text-sand-500 dark:text-sand-400">
                    {metersToFeet(day.gpxStats.elevationGain)} ft
                  </div>
                </div>
                <div>
                  <div class="text-sand-500 dark:text-sand-400 text-xs">Elevation ↓</div>
                  <div class="font-semibold text-earth-900 dark:text-sand-100">
                    {day.gpxStats.elevationLoss} m
                  </div>
                  <div class="text-xs text-sand-500 dark:text-sand-400">
                    {metersToFeet(day.gpxStats.elevationLoss)} ft
                  </div>
                </div>
              </div>
            )}
          </div>
        </a>
      ))}
    </div>

    {days.length === 0 && (
      <div class="text-center py-12 text-sand-500">
        <p>No days added yet. Check back soon!</p>
      </div>
    )}
  </div>
</BaseLayout>
