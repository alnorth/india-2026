---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getAllDays, naturalSort } from '@/lib/days';
import { format } from 'date-fns';
import RouteMapThumbnail from '@/components/RouteMapThumbnail';
import FullRouteMap from '@/components/FullRouteMap';
import { kmToMiles, metersToFeet } from '@/lib/unitConversions';
import fs from 'fs';
import path from 'path';
import sharp from 'sharp';

const days = getAllDays();

// Build routes array for full route map (days with GPX or coordinates)
const fullRoutes = days
  .filter((day) => day.gpxPath || day.parsedCoordinates)
  .map((day, index) => ({
    dayNumber: index + 1,
    label: day.title,
    gpxPath: day.gpxPath,
    slug: day.slug,
    coordinates: day.parsedCoordinates,
  }));

// Generate photo thumbnails for each day
const dayThumbnails = new Map<string, string[]>();

for (const day of days) {
  const photosDir = path.join(process.cwd(), 'content', 'days', day.slug, 'photos');
  const optimizedDir = path.join(process.cwd(), 'dist', '_images', day.slug);
  const thumbnails: string[] = [];

  if (fs.existsSync(photosDir)) {
    fs.mkdirSync(optimizedDir, { recursive: true });

    // Use frontmatter photo order if available, otherwise fall back to natural sort
    let photoFiles: string[];
    if (day.photos && day.photos.length > 0) {
      // Extract filenames from the already-ordered photos array
      photoFiles = day.photos.map((photoPath) => photoPath.split('/').pop()!);
    } else {
      // No frontmatter photos, fall back to natural sort
      photoFiles = fs
        .readdirSync(photosDir)
        .filter((file) => /\.(jpg|jpeg|png|gif|webp)$/i.test(file))
        .sort(naturalSort);
    }

    for (const filename of photoFiles) {
      const photoPath = path.join(photosDir, filename);
      const thumbnailFilename = `${path.parse(filename).name}-thumb.webp`;
      const thumbnailPath = path.join(optimizedDir, thumbnailFilename);
      const thumbnailPublicPath = `/_images/${day.slug}/${thumbnailFilename}`;

      try {
        // Only generate if doesn't exist
        if (!fs.existsSync(thumbnailPath)) {
          await sharp(photoPath)
            .resize(400, 400, {
              fit: 'cover',
              position: 'center',
            })
            .webp({ quality: 80 })
            .toFile(thumbnailPath);
        }
        thumbnails.push(thumbnailPublicPath);
      } catch (error) {
        console.warn(`Could not optimize ${filename}:`, error);
      }
    }
  }

  if (thumbnails.length > 0) {
    dayThumbnails.set(day.slug, thumbnails);
  }
}
---

<BaseLayout>
  <div>
    <div class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Journey Overview</h2>
      <p class="text-sand-700 dark:text-sand-300">
        Follow along as I cycle from coast to coast across southern India.
        Each day includes the planned route, ride details, and stories from the road.
      </p>
    </div>

    {/* Full Route Map */}
    {fullRoutes.length > 0 && (
      <div class="mb-8">
        <h3 class="text-xl font-semibold mb-4">Complete Route</h3>
        <div class="h-96 w-full rounded-lg overflow-hidden shadow-lg">
          <FullRouteMap client:load routes={fullRoutes} />
        </div>
      </div>
    )}

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {days.map((day) => (
        <a
          href={`/day/${day.slug}/`}
          class="block bg-sand-50 dark:bg-earth-800 rounded-lg shadow-md hover:shadow-lg transition-shadow overflow-hidden"
        >
          {/* Route Thumbnail */}
          {(day.gpxPath || day.parsedCoordinates) && (
            <div class="h-48 w-full">
              <RouteMapThumbnail client:load gpxPath={day.gpxPath} coordinates={day.parsedCoordinates} />
            </div>
          )}

          <div class="p-6">
            <div class="flex justify-between items-start mb-2">
              <h3 class="text-xl font-semibold">{day.title}</h3>
              <span class={`px-2 py-1 text-xs rounded flex-shrink-0 ml-2 ${
                day.status === 'completed' ? 'bg-forest-100 text-forest-800' :
                day.status === 'in-progress' ? 'bg-saffron-100 text-saffron-800' :
                'bg-sand-200 text-sand-800'
              }`}>
                {day.status}
              </span>
            </div>

            <p class="text-sm text-sand-600 dark:text-sand-400 mb-3">
              {format(new Date(day.date), 'EEEE, MMMM d, yyyy')}
            </p>

            {day.location && (
              <p class="text-sm text-sand-600 dark:text-sand-400 mb-3">
                {day.location}
              </p>
            )}

            {/* Stats from GPX */}
            {day.gpxStats && (
              <div class="grid grid-cols-3 gap-2 text-sm border-t border-sand-300 pt-3 dark:border-earth-700">
                <div>
                  <div class="text-sand-500 dark:text-sand-400 text-xs">Distance</div>
                  <div class="font-semibold text-earth-900 dark:text-sand-100">
                    {day.gpxStats.distance} km
                  </div>
                  <div class="text-xs text-sand-500 dark:text-sand-400">
                    {kmToMiles(day.gpxStats.distance)} mi
                  </div>
                </div>
                <div>
                  <div class="text-sand-500 dark:text-sand-400 text-xs">Elevation ↑</div>
                  <div class="font-semibold text-earth-900 dark:text-sand-100">
                    {day.gpxStats.elevationGain} m
                  </div>
                  <div class="text-xs text-sand-500 dark:text-sand-400">
                    {metersToFeet(day.gpxStats.elevationGain)} ft
                  </div>
                </div>
                <div>
                  <div class="text-sand-500 dark:text-sand-400 text-xs">Elevation ↓</div>
                  <div class="font-semibold text-earth-900 dark:text-sand-100">
                    {day.gpxStats.elevationLoss} m
                  </div>
                  <div class="text-xs text-sand-500 dark:text-sand-400">
                    {metersToFeet(day.gpxStats.elevationLoss)} ft
                  </div>
                </div>
              </div>
            )}

            {/* Photo Thumbnails */}
            {dayThumbnails.has(day.slug) && (
              <div class="flex gap-2 mt-3 pt-3 border-t border-sand-300 dark:border-earth-700 overflow-hidden">
                {dayThumbnails.get(day.slug)!.map((thumbnail, index) => (
                  <div class="w-12 h-12 flex-shrink-0 rounded overflow-hidden">
                    <img
                      src={thumbnail}
                      alt={`Photo ${index + 1}`}
                      width="48"
                      height="48"
                      loading="lazy"
                      class="w-full h-full object-cover"
                    />
                  </div>
                ))}
              </div>
            )}
          </div>
        </a>
      ))}
    </div>

    {days.length === 0 && (
      <div class="text-center py-12 text-sand-500">
        <p>No days added yet. Check back soon!</p>
      </div>
    )}
  </div>
</BaseLayout>
